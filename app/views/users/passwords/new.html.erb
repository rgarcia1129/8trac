<h3>Forgot your password?</h3>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'p-t-15' }) do |f| %>

    <%= f.error_notification %>
    <div class="row">
      <div class="row form-inputs">
        <div class="col-sm-12">
          <%= f.input :email, required: true, class: "form-control", autofocus: true %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", :class => "btn btn-primary btn-cons m-t-10" %>
      </div>
<% end %>

<%= render "users/shared/links" %>